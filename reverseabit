#include <iostream>
using namespace std;

// Function to print 32 bits
void printBits(unsigned int n) {
    for (int i = 31; i >= 0; i--) {
        cout << ((n >> i) & 1);
    }
    cout << endl;
}

unsigned int reverseBits(unsigned int n) {
    unsigned int rev = 0;

    for (int i = 0; i < 32; i++) {
        rev = (rev << 1) | (n & 1); // shift rev and add last bit
        n >>= 1;                    // drop last bit of n
    }

    return rev;
}

int main() {
    unsigned int n = 5; // binary: 000...0101
    cout << "Original bits: ";
    printBits(n);

    unsigned int ans = reverseBits(n);
    cout << "Reversed bits: ";
    printBits(ans);

    cout << "Decimal value after reverse = " << ans << endl;
    return 0;
}
